@page "/tipos"

<h3>Mantenimiento de tipos de documentos</h3>

<div class="mb-3">
    <a class="btn btn-primary" href="/tipos/create">Nuevo Tipo de Documento</a>
</div>

<GenericList MyList="LTipos">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>País</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tipo in LTipos!)
                {
                    <tr>
                        <td>@tipo.Name</td>
                        <td>
                            @*Insertamos dos botones el de editar como un link porque nos debe de llevar a otra pagina y el de Borrar como boton porque solo tiene que ejecutar un comando*@
                            <a href="/tipos/edit/@tipo.Id" class="btn btn-warning">Editar</a>
                            <button @onclick=@(() => DeleteAsync(tipo)) class="btn btn-danger">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>